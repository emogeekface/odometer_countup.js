{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "declaration": true, // activa la generación de archivos de definición de tipos
      "declarationDir": "dist" // especifica la carpeta donde se deben generar los archivos de definición de tipos
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compileOnSave": false
  }